                                } else {
                                    toastr.warning(result.message);
                                }
                            }
                        });

                    }).catch(error => {
                        toastr.warning("Error while geting public key: " + error);
                    });
                }).catch(error => {
                    toastr.warning("Error while geting public key: " + error);
                });
            }
        }
        else {
            $("#modal-walletchange").modal("toggle");
        }
    }

